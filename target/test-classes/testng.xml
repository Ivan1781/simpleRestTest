<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="test_POST_PUT" verbose="1" >
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
    </listeners>
    <test name="test" >
        <classes>
            <class name="dins.com.post.Tests_POST">
                    <methods>
                        <parameter name="requiredField" value="firstName"/>
                        <parameter name="valueField" value="Alex"/>
                        <parameter name="nonRequiredField" value="lastName"/>
                        <include name="test_POST_createUser_withRequiredField_positive"/>
                        <include name="test_POST_createUser_withNonRequiredField_negative"/>
                    </methods>
            </class>
            <class name="dins.com.get.Tests_GET">
                <methods>
                    <parameter name="id" value="a"/>
                    <include name="test_GET_getUsers_positive"/>
                    <include name="test_GET_getUsersById_negative"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
